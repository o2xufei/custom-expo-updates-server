{
  "expo": {
    "name": "expo-updates-client",
    "slug": "expo-updates-client",
    "owner": "anonymous",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    // 启动屏幕相关参数
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "runtimeVersion": "1",
    // "updates": {
    //   "url": "https://etest.rpc-asia.com/recipeUpdate/api/manifest",
    //   "enabled": true,
    //   "fallbackToCacheTimeout": 30000,
    //   "codeSigningCertificate": "./code-signing/certificate.pem",
    //   "codeSigningMetadata": {
    //     "keyid": "main",
    //     "alg": "rsa-v1_5-sha256"
    //   }
    // },
    "updates": {
      "url": "http://localhost:3000/recipeUpdate/api/manifest", 
      "enabled": true,
      "fallbackToCacheTimeout": 30000,
      "codeSigningCertificate": "./code-signing/certificate.pem",
      "codeSigningMetadata": {
        "keyid": "main", 
        "alg": "rsa-v1_5-sha256"
      },
      "developmentClient": {
        "signatureValidation": false
      }
    },
    // "updates": {
    //   "url": "http://localhost:3000/api/manifest",
    //   "enabled": true,
    //   "fallbackToCacheTimeout": 30000,
    //   "codeSigningCertificate": "./code-signing/certificate.pem",
    //   "codeSigningMetadata": {
    //     "keyid": "main",
    //     "alg": "rsa-v1_5-sha256"
    //   }
    // },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.test.expo-updates-client",
      "infoPlist": {
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true
        }
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.test.expoupdatesclient"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-build-properties",
        {
          "android": {
            "usesCleartextTraffic": true
          },
          "ios": {}
        }
      ]
    ]
  }
}